<%- include('partials/header') %>

<section class="container" style="padding: 5rem 0;">
  <h1 class="section-title">Bot Features</h1>
  
  <!-- Economy System -->
  <div style="margin-bottom: 4rem;">
    <h2 style="color: var(--primary-color); margin-bottom: 1.5rem; font-size: 2rem;">Economy System</h2>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-wallet"></i></div>
        <h3>Currency & Banking</h3>
        <p>Virtual currency system with daily rewards, transaction history, and user balances.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-briefcase"></i></div>
        <h3>Jobs & Work</h3>
        <p>Multiple job options with different salaries, cooldowns, and skill requirements.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-shopping-cart"></i></div>
        <h3>Shop & Items</h3>
        <p>Versatile shop system with various categories of items to purchase and use.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-fish"></i></div>
        <h3>Activities</h3>
        <p>Fun activities like fishing and mining to earn items and currency.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-box-open"></i></div>
        <h3>Inventory System</h3>
        <p>Manage your collected items, use consumables, and equip tools.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-exchange-alt"></i></div>
        <h3>User Transactions</h3>
        <p>Send and receive currency from other users directly.</p>
      </div>
    </div>
  </div>
  
  <!-- Games System -->
  <div style="margin-bottom: 4rem;">
    <h2 style="color: var(--primary-color); margin-bottom: 1.5rem; font-size: 2rem;">Games & Entertainment</h2>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-question"></i></div>
        <h3>Trivia Challenges</h3>
        <p>Test your knowledge with thousands of trivia questions across various categories.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-hand-rock"></i></div>
        <h3>Rock-Paper-Scissors</h3>
        <p>Play the classic game against the bot with betting options.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-dragon"></i></div>
        <h3>Raid Battles</h3>
        <p>Team up with other server members to defeat powerful raid bosses.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-users"></i></div>
        <h3>Team System</h3>
        <p>Create and manage teams for collaborative gameplay and shared rewards.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-trophy"></i></div>
        <h3>Leaderboards</h3>
        <p>Compete for top positions in game-specific and global leaderboards.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-share-alt"></i></div>
        <h3>Social Sharing</h3>
        <p>Share your achievements and stats with other Discord users.</p>
      </div>
    </div>
  </div>
  
  <!-- Moderation & Utility -->
  <div style="margin-bottom: 4rem;">
    <h2 style="color: var(--primary-color); margin-bottom: 1.5rem; font-size: 2rem;">Moderation & Utility</h2>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-gavel"></i></div>
        <h3>Moderation Commands</h3>
        <p>Essential tools like kick, ban, and message clearing to maintain server order.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-question-circle"></i></div>
        <h3>Help & Tutorials</h3>
        <p>Comprehensive help system and interactive tutorials to guide new users.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-cogs"></i></div>
        <h3>Server Settings</h3>
        <p>Customize bot behavior and features specifically for your server.</p>
      </div>
    </div>
  </div>
  
  <!-- CTA -->
  <div style="text-align: center; margin-top: 3rem;">
    <h2>Ready to add these features to your server?</h2>
    <div style="margin-top: 2rem;">
      <a href="https://discord.com/api/oauth2/authorize?client_id=<%= typeof clientId !== 'undefined' ? clientId : '1356256774348341292' %>&permissions=<%= typeof permissions !== 'undefined' ? permissions : '8' %>&scope=bot%20applications.commands" class="btn btn-primary" target="_blank">
        <i class="fas fa-plus-circle"></i> Add to Discord
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
