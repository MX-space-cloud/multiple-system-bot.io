<%- include('partials/header') %>

<section class="container commands">
  <h1 class="section-title">Bot Commands</h1>
  
  <% if (Object.keys(commandCategories).length === 0) { %>
    <div style="text-align: center; padding: 3rem 0;">
      <p>No commands available at the moment. Please check back later.</p>
    </div>
  <% } else { %>
    <% Object.keys(commandCategories).forEach(category => { %>
      <div class="command-category">
        <h2 class="category-title"><%= category.charAt(0).toUpperCase() + category.slice(1) %> Commands</h2>
        <div class="command-list">
          <% commandCategories[category].forEach(command => { %>
            <div class="command-card">
              <h3 class="command-name">/<%= command.name %></h3>
              <p class="command-description"><%= command.description %></p>
            </div>
          <% }); %>
        </div>
      </div>
    <% }); %>
  <% } %>
  
  <!-- CTA -->
  <div style="text-align: center; margin-top: 3rem;">
    <h2>Ready to use these commands in your server?</h2>
    <div style="margin-top: 2rem;">
      <a href="https://discord.com/api/oauth2/authorize?client_id=<%= typeof clientId !== 'undefined' ? clientId : 'YOUR_CLIENT_ID' %>&permissions=<%= typeof permissions !== 'undefined' ? permissions : '0' %>&scope=bot%20applications.commands" class="btn btn-primary" target="_blank">
        <i class="fas fa-plus-circle"></i> Add to Discord
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>